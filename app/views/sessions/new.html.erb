					</label>

					<input 
						class="login-text"
						type="text"
		       	name="user[username]"
		       	id="username"
		       	value="<%= @user.username %>">
		    </div>
		    <div class="row">
					<label 
						for="password">
						Password
					</label>

					<input 						
						class="login-text"
						type="password"
		       	name="user[password]"
		       	id="password">       
	  		</div>
	  		<div class="row">
					<input 
						type="submit"
						class="btn btn-lg btn-primary"
		       	value="Sign In">
		    </div>
	  	</form>
