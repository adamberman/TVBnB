<div class="full-page">
	<div class="container">
		<div class="jumbotron">
			<h1>Welcome Home</h1>
			<p class="lead">
				Log In!
			</p>
			<%= render './layouts/errors' %>
			<form 
	  		action="<%= session_url %>" 
	  		method="POST">
				<input  
	    		type="hidden"
					name="authenticity_token"
					value="<%= form_authenticity_token %>">  

				<div class="row">
					<label 
						for="username">
