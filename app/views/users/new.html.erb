<div class="container">
	<div class="jumbotron">
		<h1>Welcome Home</h1>
		<p class="lead">
			Sign Up!
		</p>
		<%= render './layouts/errors' %>
		<form 
  		action="<%= users_url %>" 
  		method="POST">
			<input  
    		type="hidden"
				name="authenticity_token"
				value="<%= form_authenticity_token %>">  

			<div class="row">
				<label 
					for="username">
					Username
				</label>

				<input 
					type="text"
	       	name="user[username]"
	       	id="username"
	       	value="<%= @user.username %>">
	    </div>
	    <div class="row">
				<label 
					for="password">
					Password
				</label>

				<input 
					type="password"
	       	name="user[password]"
	       	id="password">       
  		</div>
  		<div class="row">
				<input 
					type="submit"
					class="btn btn-lg btn-primary"
	       	value="Sign Up">
	    </div>
  	</form> 
	</div>
</div>